<!-- begin page-header -->
<h1 class="page-header"><i class="fa-solid fa-list-check"></i> SHERIA <small> TASKS</small></h1>
<!-- end page-header -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="@Url.Action("Tasks", "ClientManagement")" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fas fa-undo-alt"></i></a>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Tasks List</h4>
    </div>
    <div class="panel-body">
        <p></p>
        <div class="form-horizontal">
            <div class="row">
            <a id="editabledatatable_new" class="btn btn-sm btn-success" data-toggle="modal" data-target="#capture-record">
            <i class="fa fa-plus"></i> Add New
            </a>
            <br />
            <br />
            </div>
            <div class="row">
                <table id="editabledatatable" class="table table-striped table-hover table-bordered table-condensed">
                    <thead>
                        <tr role="row">
                            <th style="width:auto">Task Name</th>
                            <th style="width:auto">Due Date</th>
                            <th style="width:auto">Priority</th>
                            <th style="width:auto">Assigned User</th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="modal fade" id="capture-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Capture Task</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input id="recordid" type="hidden" name="recordid" />
                                            <label class="form-control-label" for="task_name">Task Name</label>
                                            <input id="task_name" type="text" name="task_name" class="form-control" placeholder="Enter Task Name" />
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="matter">Matter(Optional)</label>
                                            <select id="matter" name="matter" class="form-control selectpicker" style="width: 100%"></select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="due_date">Due Date</label>
                                            <input id="due_date" type="text" name="due_date" class="form-control" data-date-format="yyyy-mm-dd" style="width: 100%" />
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="priority">Priority</label>
                                            <select id="priority" name="priority" class="form-control">
                                                <option value="">Please Select Type</option>
                                                <option value="IND">High</option>
                                                <option value="COMP">Medium</option>
                                                <option value="COMP">Low</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <label class="form-control-label" for="user_id">Asigned To</label>
                                            <select id="user_id" name="user_id" class="form-control selectpicker" style="width: 100%"></select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label class="form-control-label" for="description">Remarks</label>
                                            <textarea id="description" rows="3" name="description" placeholder="Enter Remarks" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Cancel</a>
                                    <a href="#" class="btn btn-success btn-sm" id="save"><i class="fa fa-save"></i>&nbsp;Save</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>
<!-- end panel-body -->
<!-- end panel -->
