                            </div>
                        </li>
                    </ul>
                    <!-- end sidebar user -->
                    <!-- begin sidebar nav -->
                    <ul class="nav">
                        <li class="nav-header">Navigation</li>
                        @if (Model != null)
                        {
                            foreach (var m in Model)
                            {
                                if (m.sub_menus != null)
                                {
                                    <li class="has-sub @m.menu_selected">
                                        <a href="#">
                                            <b class="caret pull-right"></b>
                                            <i class="@m.menu_icon"></i>
                                            <span>@m.menu_name</span>
                                        </a>
                                        <ul class="sub-menu">
