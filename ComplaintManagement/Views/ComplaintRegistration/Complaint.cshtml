@section PageStyles{
    <link href="~/assets/static/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets/static/css/pretty-checkbox.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/datatables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/datatables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-wizard/css/bwizard.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/uploader/css/jquery.dm-uploader.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/uploader/css/style.css" rel="stylesheet" />
}
<!-- begin page-header -->
<h1 class="page-header"><i class="fa-regular fa-book"></i> COMPlAINT MANAGEMENT <small> Register complaint </small></h1>
<!-- end page-header -->
<div class="panel panel-inverse" id="main_panel">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="@Url.Action("Client", "Data Maintenance")" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Register complaint</h4>
    </div>
    <div class="panel-body">
        <p></p>
        <div class="form-horizontal">
            <div class="row">
                <a id="editabledatatable_new" class="btn btn-sm btn-success" data-toggle="modal" data-target="#capture-record">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <br />
                <br />
            </div>
            <div class="row">
                <table id="complaintsdatatable" class="table table-striped table-hover table-bordered table-condensed">
                    <thead>
                        <tr role="row">
                            <th style="width:auto">Category</th>
                            <th style="width:auto">Sub-category</th>
                            <th style="width:auto">Complaint Type</th>
                            <th style="width:auto">Nature Of Complaint</th>
                            <th style="width:auto">State</th>
                            <th style="width:auto">Is Anonymous</th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="modal fade" id="capture-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
                                    <h4 class="modal-title">Capture Complaint</h4>
                                </div>
                                <div class="modal-body">
                                    <h5><b>1. Complaint Information</b></h5>
                                    <hr />

                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <input id="recordid" type="hidden" name="recordid" />
                                            <label for="category_id"><b>Category</b></label>
                                            <select id="category_id" name="category_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="category_id"></span>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label for="subcategory_id"><b>Sub-Category</b></label>
                                            <select id="subcategory_id" name="subcategory_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="subcategory_id"></span>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label for="complaint_type"><b>Complaint Type</b></label>
                                            <select id="complaint_type" name="complaint_type" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="complaint_type"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="nature_of_complaint">Nature of complaint</label>
                                            <input id="nature_of_complaint" type="text" name="nature_of_complaint" class="form-control" data-parsley-group="wizard-step-1" required />
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="nature_of_complaint"></span>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="county_id">County</label>
                                            <select id="county_id" name="county_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="county_id"></span>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="sub_county_id">Sub-County</label>
                                            <select id="sub_county_id" name="sub_county_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="sub_county_id"></span>
                                        </div>
                                    </div> 
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="ward_id">Ward</label>
                                            <select id="ward_id" name="ward_id" class="form-control selectpicker" style="width: 100%" data-parsley-group="wizard-step-1" required></select>
                                            <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="ward_id"></span>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="isanonymous">Is Anonymous</label><br />
                                            <div class="pretty p-switch p-fill">
                                                <input type="checkbox" id="isanonymous" name="isanonymous" value="false" />
                                                <div class="state p-success">
                                                    <i class="icon fa fa-check"></i>
                                                    <label></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="complaint_description">Complaint Description</label>
                                            <textarea id="complaint_description" rows="3" name="complaint_description" placeholder="Enter Complaint Description" class="form-control"></textarea>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label class="form-control-label" for="address">Physical Address</label>
                                            <textarea id="address" rows="3" name="address" placeholder="Enter Physical Address" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <br />
                                    </div>

                                    <h5><b>2. Complaint Uploads</b></h5>
                                    <br />
                                    <fieldset>
                                        <legend class="pull-left width-full">Maintain Uploads</legend>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div id="drag-and-drop-zone" class="dm-uploader p-5">
                                                    <h5 class="mb-5 mt-5 text-muted">Drag &amp; drop files here</h5>
                                                    <div class="btn btn-primary btn-block mb-5">
                                                        <span>Open the file browser</span>
                                                        <input type="file" title="Click to add file" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div id="uploadedFiles" style="display: none">
                                                </div>
                                                <div id="uploadedFilesList" style="display: none">
                                                    <ul id="filelist" class="chart-legend"></ul>
                                                </div>
                                                <div class="card h-100">
                                                    <div class="card-header">
                                                        Upload Messages
                                                    </div>
                                                    <ul class="list-group list-group-flush" id="debug">
                                                        <li class="list-group-item text-muted empty">Loading plugin....</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <br />
                                        </div>
                                    </fieldset>

                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times-circle"></i>&nbsp;Cancel</a>
                                    <a href="#" class="btn btn-success btn-sm" id="save"><i class="fa fa-save"></i>&nbsp;Save</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                    <div class="modal fade" id="view-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
                                    <h4 class="modal-title">View Complaint</h4>
                                </div>
                                <div class="modal-body">
                                    <h5><b>1. Complaint Information</b></h5>
                                    <hr />
                                <div class="row">
                                     <div class="col-md-4 col-sm-4 col-xs-12">
                                         <label class="form-control-label" for="category_id">Category</label>
                                         <input id="category_id" type="text" name="category_id" class="form-control" readonly />
                                     </div>
                                     <div class="col-md-4 col-sm-4 col-xs-12">
                                         <label class="form-control-label" for="subcategory_id">Sub-Category</label>
                                         <input id="subcategory_id" type="text" name="subcategory_id" class="form-control" readonly />
                                     </div>
                                     <div class="col-md-4 col-sm-4 col-xs-12">
                                         <label class="form-control-label" for="complaint_type">Complaint type</label>
                                         <input id="complaint_type" type="text" name="complaint_type" class="form-control" readonly />
                                     </div>
                                </div>
                                <div class="row">
                                     <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="nature_of_complaint">Nature of complaint</label>
                                        <input id="nature_of_complaint" type="text" name="nature_of_complaint" class="form-control" readonly />
                                     </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="county_id">County</label>
                                        <input id="county_id" type="text" name="county_id" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="sub_county_id">Sub-County</label>
                                        <input id="sub_county_id" type="text" name="sub_county_id" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="ward_id">Ward</label>
                                        <input id="ward_id" type="text" name="ward_id" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="isanonymous">Is Anonymous</label>
                                        <input id="isanonymous" type="text" name="isanonymous" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="state_id">State</label>
                                        <input id="state_id" type="text" name="state_id" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="complaint_description">Complaint Description</label>
                                        <textarea id="complaint_description" rows="3" name="complaint_description" class="form-control" placeholder="Enter Description" readonly></textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="address">Physical Address</label>
                                        <textarea id="address" rows="3" name="address" class="form-control" placeholder="Enter Physical Address" readonly></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="remarks">Remarks</label>
                                        <input id="remarks" type="text" name="remarks" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <br />
                                </div>
                                    @* <h5><b>2. Client Uploads</b></h5>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <table id="documentsdatatable" class="table table-striped table-hover table-bordered table-condensed">
                                                <thead>
                                                    <tr role="row">
                                                        <th style="width:auto">Client Name</th>
                                                        <th style="width:auto">File Type</th>
                                                        <th style="width:auto">File Number</th>
                                                        <th style="width:auto"></th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div> *@

                                </div>

                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<!-- end panel-body -->
<!-- end panel -->
@section PageScripts{
    <script src="~/assets/static/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/assets/static/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/static/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/static/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/static/js/table-manage-responsive.demo.min.js"></script>
    <script src="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/assets/static/js/apps.min.js"></script>
    <script src="~/assets/static/js/jquery.blockUI.js"></script>
    <script src="~/assets/static/js/complaint-registration/complaint.js"></script>
    <script src="~/assets/static/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/static/js/debugger.js"></script>
    <script src="~/assets/static/plugins/uploader/js/jquery.dm-uploader.min.js"></script>
   @*  <script src="~/assets/static/js/onboard/ind-onboard-uploader.js"></script> *@
    <script src="~/assets/static/js/onboard/client-onboard-uploader.js"></script>


    <!-- File item template -->
    <script type="text/html" id="files-template">
            <li class="media">
              <div class="media-body mb-1">
                <p class="mb-2">
                  <strong>%%filename%%</strong> - Status: <span class="text-muted">Waiting</span>
                </p>
                <div class="progress mb-2">
                  <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
        role="progressbar"
        style="width: 0%"
        aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                  </div>
                </div>
                <hr class="mt-1 mb-1" />
              </div>
            </li>
    </script>

    <!-- Debug item template -->
    <script type="text/html" id="debug-template">
        <li class="list-group-item text-%%color%%"><strong>%%date%%</strong>: %%message%%</li>
    </script>

}